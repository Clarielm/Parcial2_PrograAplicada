@model List<Parcial_2_PrograAplicada.Models.Students>

@{
    ViewBag.Title = "VistaStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Estudiantes</h2>
<br />
<a href="~/Views/Students/VistaStudentsEdit.cshtml" class="btn btn-success"> NUEVO </a>
<br />
<br />

        <table class="table table-dark table-striped">
            <thead>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Enrollements</th>
            <th>Acciones</th>
            </thead>


            <tbody>

                @foreach (var item in Model)
                {

                    <tr>

                        <td>@item.LastName</td>
                        <td>@item.FirstMidName</td>
                        <td>@item.EnrrollmentsDate</td>
                        <td>
                            <a href="~/Views/Students/VistaStudentsEdit.cshtml" class="btn btn-warning">
                                EDITAR <a>
                                    <a href="~/Controllers/StudentsController.cs/Eliminar" class="btn btn-danger">ELIMINAR <a>
                        </td>

                    </tr>

                }

            </tbody>

        </table>

